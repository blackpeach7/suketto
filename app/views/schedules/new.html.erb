<div class="text-center">
  <h1>スケジュール登録完了</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@sched) do |f| %>
    
      
         <%= render 'layouts/error_messages', model: f.object %>
      
        <div class="form-group">
          <%= f.label :start, "開始", class:"control-label" %>
          <%= f.datetime_select :start, class:"form-control" %>
        </div>
         <%# 飲み会,ご飯・お茶,趣味,イベント・パーティー,勉強会,特になし,その他 %>
        <%= f.select :kind, {"飲み会" => "飲み会", 
                            "ご飯・お茶" => "ご飯・お茶",
                            "趣味" => "趣味",
                            "イベント・パーティー" => "イベント・パーティー",
                            "勉強会" => "勉強会",
                            "特になし" => "特になし",
                            "その他" => "その他" }, class:"form-control" %>
                            <br>
        <%= f.label :place, "場所", class:"control-label" %>
        <%= f.text_field :place, class:"form-control" %>
        <%= f.select :publicflag, {"非公開" => 0, "公開" => 1 }, class:"form-control" %>
        <br>
        <%= f.label :content, "詳細", class:"control-label" %>
        <%= f.text_area :content, class:"form-control" %>
        <%= f.label :capacity, "人数", class:"control-label" %>
        <%= f.number_field :capacity, class:"form-control" %>

        <div class="form-group">

          <%= f.label :deadline, "締切", class:"control-label" %>
          <%= f.datetime_select :deadline, class:"form-control" %>
        </div>        
        <%= f.submit "登録", class:"btn btn-danger" %>
    
    <% end %>
    
  </div>
</div>
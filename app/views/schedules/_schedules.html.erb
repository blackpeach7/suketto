<ul class="media-list">
  <% schedules.each do |schedule| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(schedule.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to schedule.user.name, user_path(schedule.user) %> <span class="text-muted">posted at <%= schedule.created_at %></span>
        </div>
        <div>
          <p><%= schedule.content %></p>
        </div>
        <div>
          <% if current_user == schedule.user %>
            <%= link_to "Delete", schedule, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%#= paginate schedules %>
</ul>
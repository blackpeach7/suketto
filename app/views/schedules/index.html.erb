<div class="row">

  <div class="col-md-6 col-md-offset-3">
      <h1>全体公開された スケジュール</h1>
      <%= month_calendar(attribute: :start,  events: @schedules) do |date, schedules| %>
          <%= date %>
          <% schedules.each do |schedule| %>
            <div>
               <%= link_to schedule.content, schedule_path(schedule) %>
            </div>
          <% end %>
        <% end %>
    </div>
</div>